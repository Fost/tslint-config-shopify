{
  "name": "tslint-config-shopify",
  "version": "1.0.0",
  "description": "Shopify's baseline TSLint config.",
  "keywords": [
    "tslint",
    "tslintconfig",
    "tslintplugin",
    "tslint-config",
    "tslint-config-shopify",
    "shopify"
  ],
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tslint": "tslint -c index.js *.ts --project tsconfig.json --type-check",
    "eslint": "eslint . --max-warnings 0"
  },
  "homepage": "https://github.com/Shopify/tslint-config-shopify#readme",
  "repository": "https://github.com/Shopify/tslint-config-shopify",
  "eslintConfig": {
    "extends": [
      "plugin:shopify/es5",
      "plugin:shopify/node"
    ]
  },
  "author": "Shopify <dev@shopify.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/tslint-config-shopify/issues"
  },
  "devDependencies": {
    "eslint": "3.13.x",
    "eslint-plugin-shopify": "^15.1.1",
    "typescript": "2.1.x"
  },
  "peerDependencies": {
    "tslint": "4.3.x"
  },
  "dependencies": {
    "merge": "1.x"
  }
